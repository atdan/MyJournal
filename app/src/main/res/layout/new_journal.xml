<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What is your mood Today?"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:paddingLeft="10dp"
            android:paddingBottom="4dp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="96dp"
            android:layout_height="48dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="4dp"
            android:hint="happy"
            android:background="@drawable/border_background"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:singleLine="true">


            <Spinner
                android:id="@+id/title_spinner"
                android:layout_width="96dp"
                android:layout_height="48dp"
                android:entries="@array/title"
                android:focusable="true"
                android:inputType="textCapSentences"
                android:paddingLeft="6dp"
                android:paddingRight="24dp"
                android:spinnerMode="dropdown" />


        </android.support.design.widget.TextInputLayout>

        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:paddingLeft="10dp"
            android:paddingBottom="4dp"
            />


        <android.support.design.widget.TextInputEditText
            android:id="@+id/crave"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/border_background"
            android:focusable="true"
            android:inputType="textCapSentences"
            android:imeOptions="actionNext"
            android:maxLines="3"
            android:padding="6dp"
            android:gravity="top"
            android:hint="eg. My first day at Google"/>

        <TextView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:paddingLeft="10dp"
            android:paddingBottom="4dp"
            />


        <android.support.design.widget.TextInputEditText
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/border_background"
            android:focusable="true"
            android:inputType="text"
            android:imeOptions="actionNext"
            android:padding="6dp"
            android:gravity="top"
            android:hint="eg. Google developers are awesome and fun..." />


        <Button
            android:id="@+id/edit_save_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/save_button"
            android:text="SAVE"
            android:textColor="#fff" />








    </LinearLayout>
    </LinearLayout>

</ScrollView>